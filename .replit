modules = ["nodejs-20", "python-3.11", "web"]
[agent]
expertMode = true
integrations = ["python_database:1.0.0", "flask_authentication:1.0.0"]

[nix]
channel = "stable-25_05"
packages = ["openssl", "postgresql"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Backend API"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Frontend"

[[workflows.workflow]]
name = "Backend API"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd backend && gunicorn --bind 0.0.0.0:3000 --reuse-port --reload run:app"
waitForPort = 3000

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow]]
name = "Frontend"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd frontend && npm run dev"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 3000
externalPort = 3000

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 33563
externalPort = 5173

[[ports]]
localPort = 34525
externalPort = 6000

[[ports]]
localPort = 35957
externalPort = 4200

[[ports]]
localPort = 38921
externalPort = 3001

[[ports]]
localPort = 39811
externalPort = 3003

[[ports]]
localPort = 44171
externalPort = 3002

[[ports]]
localPort = 45419
externalPort = 5000

[deployment]
deploymentTarget = "autoscale"
run = ["bash", "-c", "cd backend && gunicorn --bind 0.0.0.0:5000 --reuse-port run:app"]
build = ["bash", "-c", "cd frontend && npm run build"]
