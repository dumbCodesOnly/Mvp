modules = ["nodejs-20", "python-3.11", "web"]
[agent]
expertMode = true
integrations = ["python_database:1.0.0", "flask_authentication:1.0.0"]

[nix]
channel = "stable-25_05"
packages = ["openssl", "postgresql"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "fullstack"

[[workflows.workflow]]
name = "fullstack"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "bash -c 'cd backend && python run.py & cd frontend && npm run dev'"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 3000
externalPort = 3000

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 34753
externalPort = 3002

[deployment]
deploymentTarget = "autoscale"
run = ["gunicorn", "--bind", "0.0.0.0:5000", "main:app"]
