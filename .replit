modules = ["nodejs-20", "python-3.11", "web"]
[agent]
expertMode = true
integrations = ["python_database:1.0.0", "flask_authentication:1.0.0"]

[nix]
channel = "stable-25_05"
packages = ["openssl", "postgresql"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start application"

[[workflows.workflow]]
name = "Start application"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "bash -c 'cd backend && gunicorn --bind 0.0.0.0:3000 --reuse-port --reload run:app & cd frontend && npm run dev'"
waitForPort = 5000

[[ports]]
localPort = 3000
externalPort = 3000

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 35851
externalPort = 4200

[[ports]]
localPort = 38921
externalPort = 3001

[[ports]]
localPort = 39811
externalPort = 3003

[[ports]]
localPort = 44171
externalPort = 3002

[[ports]]
localPort = 45419
externalPort = 5000

[deployment]
deploymentTarget = "autoscale"
run = ["gunicorn", "--bind", "0.0.0.0:5000", "main:app"]
