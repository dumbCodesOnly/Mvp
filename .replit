modules = ["python-3.11", "nodejs-20"]
[agent]
expertMode = true
integrations = ["python_database:1.0.0", "flask_authentication:1.0.0"]

[nix]
channel = "stable-25_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "fullstack"

[[workflows.workflow]]
name = "fullstack"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd backend && python run.py & cd frontend && npm run dev"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 3000
externalPort = 3000

[[ports]]
localPort = 5000
externalPort = 80
